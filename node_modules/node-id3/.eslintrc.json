{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:mocha/recommended"
    ],
    "env": {
        "node": true,
        "amd": true,
        "es6": true
    },
    "ignorePatterns": [ "./node_modules/**" ],
    "plugins": [
        "mocha"
    ],
    "rules": {
        "prefer-const": "error",
        "mocha/no-setup-in-describe": "off",
        "semi": [ "error", "never" ]
    }
}
