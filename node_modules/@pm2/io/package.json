    "vue": "^2.6.11",
    "vue-server-renderer": "^2.6.11"
  },
  "keywords": [],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "build/",
      "config/",
      "examples/",
      "test/"
    ],
    "cache": true,
    "all": true
  },
  "dependencies": {
    "@opencensus/core": "0.0.9",
